<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".seller.activity.OrderuserInfoActivity"/>
        <activity android:name=".seller.activity.CheckOrder" />
        <activity android:name=".buyer.activity.Profiles" />
        <activity android:name=".buyer.activity.SeeOrder" />
        <activity android:name=".buyer.activity.CartScreen" />
        <activity android:name=".buyer.activity.Details" />
        <activity android:name=".seller.activity.ViewItem" />
        <activity android:name=".seller.activity.AddItem" />
        <activity android:name=".seller.activity.SellerHome" />
        <activity android:name=".common.Registration" />
        <activity android:name=".common.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".buyer.activity.BuyerHome" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>